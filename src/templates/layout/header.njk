<header class="justify-between mb-10 items-center clearfix" data-pg-name="header">
    <!-- Media Group -->
    <div class="static h-full flex float-right user-nav js-menu" data-pg-name="user-nav">
        <button class="js-menu-toggle flex text-left items-center" data-pg-name="user-nav__button" data-pg-collapsed>
            <img src="https://images.unsplash.com/photo-1517305268957-8d20be2c9b62?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjIwOTIyfQq=85&fm=jpg&crop=faces&cs=srgb&w=50&h=50&fit=crop" alt="" class="block rounded" data-pg-name="user-nav__avatar">
            <div class="px-4 hidden md:block relative" data-pg-name="user-nav__label-content" data-pg-collapsed>
                <div data-pg-collapsed>
                    <p class="text-color--mysterious">Olive Houston</p>
                    <p class="text-color--common-feldspar text-size--small">Marketing Specialist</p>
                </div>
                <i class="icon-down-dir absolute pin-r pin-t"></i>
            </div>
        </button>
        <div class="js-menu-list hidden md:absolute md:w-16 bg-grey" data-pg-name="user-nav__list" data-pg-collapsed>
            <a href="#" class="block hover:text-white p-2 no-underline hover:bg-grey-dark" data-pg-name="user-nav__list-item">Settings</a>
            <a href="#" class="block hover:text-white p-2 no-underline hover:bg-grey-dark" data-pg-name="user-nav__list-item">Billing</a>
            <a href="#" class="block hover:text-white p-2 no-underline hover:bg-grey-dark" data-pg-name="user-nav__list-item">Support</a>
        </div>
    </div>
    <button class="float-right p-4" data-pg-name="header__notification-button" data-pg-collapsed>
        <i class="icon-bell"></i>
    </button>
    <div class="flex float-left" data-pg-name="header__group">
        <!--Dropdown Menu -->
        <div data-pg-name="header__media" class="flex" data-pg-collapsed>
            <img src="images/wave-admin-logo.svg"/>
            <div data-pg-name="header__media-content" class="pl-4 hidden md:block" data-pg-collapsed>
                <div class="text-size--large text-color--mysterious">WAVES</div>
                <div class="text-size--x-small text-color--common-feldspar">
                    ADMINISTRATION PANEL
</div>
            </div>
        </div>
        <button class="p-4 md:hidden" data-pg-name="header__sidebar-toggle" data-pg-collapsed>
            <i class="icon-menu"></i>
        </button>
    </div>
</header>
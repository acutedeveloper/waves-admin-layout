<!-- Main Content -->
<main class="flex-auto grey-gradient px-5">
    {% include "layout/header.njk" %}

    <!-- 3 Up Grid Row -->
    {% set grid1 = [
        {
            "columnWidth": "w-full md:w-1/3"
        },
        {
            "columnWidth": "w-full md:w-1/3"
        },
        {
            "columnWidth": "w-full md:w-1/3"
        }
    ] %}
    {% call grid.buildGrid(grid1) -%}
        {{ panel.getPanel() }}
    {%- endcall %}

    <!-- 2 Up Grid Row -->
    {% set grid2 = [
        {
            "columnWidth": "w-full md:w-2/3"
        },
        {
            "columnWidth": "w-full md:w-1/3"
        }
    ] %}
    {% call grid.buildGrid(grid2) -%}
        {{ panel.getPanel() }}
        {{ panel.getPanel() }}
    {%- endcall %}

    {% include "layout/footer.njk" %}

</main>
<!-- Main Content -->
<main class="flex-auto grey-gradient px-5">
    {% include "layout/header.njk" %}

    <!-- 3 Up Grid Row -->
    {% set grid1 = [
        {
            "columnWidth": "w-full md:w-1/3",
            "templateData": {
                "include": "components/panel/panel-mini-chart.njk",
                "title": "New Customers",
                "bigNumber": "142"
            }
        },
        {
            "columnWidth": "w-full md:w-1/3",
            "templateData": {
                "include": "components/panel/panel-mini-chart.njk",
                "title": "Active Users",
                "bigNumber": "384"
            }
        },
        {
            "columnWidth": "w-full md:w-1/3",
            "templateData": {
                "include": "components/panel/panel-mini-chart.njk",
                "title": "Sales",
                "bigNumber": "$1047"
            }
        }
    ] %}
    {% call(gridItem) grid.buildGrid(grid1) -%}
        {{ panel.getPanel(gridItem.templateData) }}
    {%- endcall %}

    <!-- 2 Up Grid Row -->
    {% set grid2 = [
        {
            "columnWidth": "w-full md:w-2/3"
        },
        {
            "columnWidth": "w-full md:w-1/3"
        }
    ] %}
    {% call grid.buildGrid(grid2) -%}
        {{ panel.getPanel() }}
        {{ panel.getPanel() }}
    {%- endcall %}

    {% include "layout/footer.njk" %}

</main>
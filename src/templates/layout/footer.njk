<!-- Footer -->
<footer class="layout-block layout-block--nopadding flex flex-wrap">

    <div class="layout-block w-full xl:w-3/5">
        <!-- 3 Up Grid Row -->
        {% set footergrid = [
            {
                "columnWidth": "w-full sm:w-1/3"
            },
            {
                "columnWidth": "w-full sm:w-1/3"
            },
            {
                "columnWidth": "w-full sm:w-1/3"
            }
        ] %}
        {% call grid.buildGrid(footergrid) -%}
            <div class="layout-block"></div>
        {%- endcall %}
    </div>

    <div class="layout-block w-full xl:w-2/5">
        <!-- 2 Up Grid Row -->
        {% set footergrid = [
            {
                "columnWidth": "w-full sm:w-1/3"
            },
            {
                "columnWidth": "w-full sm:w-2/3"
            }
        ] %}
        {% call grid.buildGrid(footergrid) -%}
            <div class="layout-block"></div>
        {%- endcall %}
    </div>
</footer>